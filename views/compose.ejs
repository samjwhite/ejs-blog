      <label  for="title">Title</label>
      <input class="form-control" type="text" name="postTitle" id="title" value="" placeholder="type here">


      <label for="postarea">Post</label> <br>
      <textarea class="form-control" name="postBody" rows="8" cols="80" id="postarea" ></textarea>

      </div>
      <button class="btn btn-primary" type="submit" name="publishPost">Publish</button>
    </form>




